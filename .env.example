# =============================================================================
# ARA Framework - Environment Configuration Template (Nov 2025)
# =============================================================================
# Copia este archivo como .env y completa con tus valores reales
# Fuente: config/settings.py
# Referencia: docs/08_GETTING_STARTED.md (paso 3 de 10)

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENV=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=text

# =============================================================================
# AI MODELS - Obtener API keys de:
# - Gemini: https://aistudio.google.com/app/apikey (GRATIS - 1500 req/día)
# - DeepSeek: https://platform.deepseek.com (GRATIS - pago por uso $0.27/M tokens)
# - MiniMax: https://platform.minimaxi.com (GRATIS - beta)
# - Anthropic: https://console.anthropic.com (OPCIONAL - Copilot Pro lo incluye)
# - OpenAI: https://platform.openai.com (OPCIONAL - Copilot Pro lo incluye)
# =============================================================================

# Google Gemini 2.5 Pro (OBLIGATORIO - 15 RPM = 1500 req/día)
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek V3 (OBLIGATORIO - arquitectura técnica)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# MiniMax-M2 (OBLIGATORIO - análisis de nicho)
MINIMAX_API_KEY=your_minimax_api_key_here

# Anthropic Claude (OPCIONAL - Copilot Pro da acceso a Sonnet/Haiku)
ANTHROPIC_API_KEY=

# OpenAI (OPCIONAL - Copilot Pro da acceso a GPT-5, GPT-4o)
OPENAI_API_KEY=

# Groq (OPCIONAL pero RECOMENDADO - LLaMA 3.3-70B GRATIS - 14,400 req/día)
# Obtener en: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Perplexity AI (OPCIONAL - Real-time web search + LLM)
# Obtener en: https://www.perplexity.ai/settings/api
# Precios: ~$5/1M tokens (sonar-large), ~$1/1M tokens (sonar-small)
PERPLEXITY_API_KEY=

# GitHub Models (OPCIONAL - Beta GRATIS - GPT-4o, Claude 3.5, etc.)
# Obtener en: https://github.com/marketplace/models
# Requiere: Personal Access Token con scope "read:packages"
GITHUB_TOKEN=

# =============================================================================
# MCP SERVERS - Tokens para integraciones
# =============================================================================

# GitHub (OBLIGATORIO - para repos y análisis de código)
# Crear en: https://github.com/settings/tokens
# Scopes: repo, read:org, read:user
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_pat_here

# Jina AI (OBLIGATORIO - web scraping avanzado)
# Obtener en: https://jina.ai/
JINA_API_KEY=your_jina_api_key_here

# Supabase (OBLIGATORIO - PostgreSQL + Storage)
# Crear proyecto en: https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Notion (OPCIONAL - export de knowledge base)
NOTION_API_KEY=

# Composio/Rube (OPCIONAL - orchestration avanzado)
COMPOSIO_API_KEY=

# =============================================================================
# SEMANTIC SCHOLAR (OBLIGATORIO)
# =============================================================================
# ⚠️ CRÍTICO: 1 request/segundo es el límite estricto
# No necesita API key, pero respeta rate limit
SEMANTIC_SCHOLAR_DELAY=1.0
SEMANTIC_SCHOLAR_BASE_URL=https://api.semanticscholar.org/graph/v1

# =============================================================================
# REDIS/VALKEY CACHE (OBLIGATORIO)
# =============================================================================
# Instalar Valkey (fork Redis):
# Docker: docker run -d --name valkey -p 6379:6379 valkey/valkey:latest
# Windows: choco install valkey
# Linux: apt install valkey
REDIS_URL=redis://localhost:6379/0

# Cache TTLs (en segundos)
REDIS_TTL_PAPERS=604800        # 7 días (papers son estables)
REDIS_TTL_CONTENT=259200       # 3 días (contenido web cambia)
REDIS_TTL_ANALYSIS=2592000     # 30 días (análisis completos)

# =============================================================================
# UPTRACE OBSERVABILITY (OBLIGATORIO)
# =============================================================================
# Crear cuenta en: https://uptrace.dev (1TB/mes gratis)
# Obtener DSN desde: https://app.uptrace.dev/projects
UPTRACE_DSN=https://your_token@api.uptrace.dev/project_id
UPTRACE_SERVICE_NAME=ara-framework

# =============================================================================
# AGENT TIMEOUTS (SLAs)
# =============================================================================
# Timeouts en segundos por agente (basado en SLA investigado)
AGENT_TIMEOUT_NICHE=480            # 8 minutos - NicheAnalyst
AGENT_TIMEOUT_LITERATURE=1500      # 25 minutos - LiteratureResearcher (bottleneck)
AGENT_TIMEOUT_ARCHITECT=720        # 12 minutos - TechnicalArchitect
AGENT_TIMEOUT_IMPLEMENTATION=480   # 8 minutos - ImplementationSpecialist
AGENT_TIMEOUT_SYNTHESIS=600        # 10 minutos - ContentSynthesizer
AGENT_TIMEOUT_ORCHESTRATOR=420     # 7 minutos - Orchestrator

# =============================================================================
# BUDGET MANAGER (Copilot Pro - 300 créditos/mes)
# =============================================================================
BUDGET_MAX_CREDITS_PER_MONTH=300
BUDGET_ALERT_THRESHOLD=0.80  # Alerta al 80% = 240 créditos

# Costos por request (en créditos)
CREDIT_COST_GPT5=1.0               # GPT-5 (premium)
CREDIT_COST_CLAUDE_SONNET=1.0      # Claude Sonnet 4.5 (premium)
CREDIT_COST_CLAUDE_HAIKU=0.33      # Claude Haiku 4.5 (económico)
CREDIT_COST_GPT4O=0.0              # GPT-4o (GRATIS unlimited)
CREDIT_COST_GEMINI=0.0             # Gemini 2.5 Pro (GRATIS API directa)

# =============================================================================
# CIRCUIT BREAKER & RETRY
# =============================================================================
CIRCUIT_BREAKER_FAIL_MAX=5
CIRCUIT_BREAKER_TIMEOUT=60
RETRY_MAX_ATTEMPTS=3
RETRY_MIN_WAIT=1
RETRY_MAX_WAIT=10

# =============================================================================
# PLAYWRIGHT (Browser automation)
# =============================================================================
# Instalación: playwright install chromium
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true

# =============================================================================
# CREWAI CONFIGURATION
# =============================================================================
CREWAI_TELEMETRY_OPT_OUT=true  # Deshabilita telemetría (opcional)
